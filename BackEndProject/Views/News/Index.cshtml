@model BackEndProject.ViewModel.NewsVM

<aside class="right-side right-padding">
    <section class="content-header">
        <!--section starts-->
        <h2>News</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index","Home")">
                    <i class="fa fa-fw fa-home"></i> Dashboard
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index","News")">News</a>
            </li>
            <li>
                <a href="@Url.Action("Index","News")">News</a>
            </li>
        </ol>
    </section>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <!-- Basic charts strats here-->
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <i class="fa fa-newspaper-o" aria-hidden="true"></i> News
                        </h4>
                        <span class="pull-right">
                            <i class="glyphicon glyphicon-chevron-up showhide clickable"></i>
                            <i class="glyphicon glyphicon-remove removepanel"></i>
                        </span>
                    </div>
                    <div class="panel-body table-responsive">
                        <table class="table table-bordered text-center" id="fitness-table">
                            <thead>
                                <tr>
                                    <th class="text-center">Date</th>
                                    <th class="text-center">Category</th>
                                    <th class="text-center">Title</th>
                                    <th class="text-center">Edit/Save</th>
                                    <th class="text-center">Delete/Cancel</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.News)
                                {
                                    <tr>
                                        <td>@item.Date</td>
                                        <td>@Model.Package.FirstOrDefault(p=> p.id == item.PackageId).Name</td>
                                        <td>@Html.Raw(item.Description)</td>
                                        <td>
                                            <a class="edit btn btn-primary" href="@Url.Action("Edit","News",new {id = item.id })">
                                                <i class="fa fa-fw fa-edit"></i> Edit
                                            </a>
                                        </td>
                                        <td>
                                            <a class="delete btn btn-danger" data-url="@Url.Action("Delete","News")" id="@item.id" href="@Url.Action("Delete","News")">
                                                <i class="fa fa-trash-o"></i> Delete
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</aside>
@section Scripts{

    <script src="~/Content/vendors/datatables/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="~/Content/vendors/datatables/js/dataTables.bootstrap.js" type="text/javascript"></script>
    <script src="~/Content/vendors/datatables/js/dataTables.bootstrap.js" type="text/javascript"></script>
    <script src="~/Content/vendors/sweetalert/dist/sweetalert2.js" type="text/javascript"></script>
    <script src="~/Scripts/custom_js/news.js" type="text/javascript"></script>
}

@section Styles{
    <link type="text/css" href="~/Content/vendors/datatables/css/dataTables.bootstrap.css" rel="stylesheet" />
    <link type="text/css" href="~/Content/css/custom_css/fitness.css" rel="stylesheet" />
    <link type="text/css" href="~/Content/vendors/sweetalert/dist/sweetalert2.css" rel="stylesheet" />
    <link type="text/css" href="~/Content/css/custom_css/news.css" rel="stylesheet" />
    <link type="text/css" rel="stylesheet" href="~/Content/css/custom_css/panel.css" />
}