@model BackEndProject.Models.Users

<aside class="right-side right-padding">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <!--section starts-->
        <h2 class="section_h2_margin_top">User Profile</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index","Home")">
                    <i class="fa fa-fw fa-home"></i> Dashboard
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index","User")">Users</a>
            </li>
            <li>
                <a href="@Url.Action("Details","User",new {id=Model.id })">User Profile</a>
            </li>
        </ol>
    </section>
    <!--section ends-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h5 class="panel-title">User Profile</h5>
                    </div>
                    <div class="panel-body">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <div class="text-center">
                                    @if (Model.Image != null)
                                    {
                                        <img data-src="~/Content/img/@Model.Image" width="200" height="200" class="img-bor" src="~/Content/img/@Model.Image" alt="profile">
                                    }
                                    else
                                    {
                                        <img data-src="holder.js/200x150" width="200" height="200" class="img-bor" src="#" alt="profile">
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <br>
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>User</th>
                                            <th>Details</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td class="text-primary">Username</td>
                                            <td>@Model.Fullname</td>
                                        </tr>
                                        <tr>
                                            <td class="text-primary">Gender</td>
                                            <td>
                                                @if (Model.Gender == false)
                                                {
                                                    <span>Male</span>
                                                }
                                                else
                                                {
                                                    <span>Female</span>
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="text-primary">Email</td>
                                            <td>@Model.Email</td>
                                        </tr>
                                        <tr>
                                            <td class="text-primary">Contact Number</td>
                                            @if (Model.Number != null)
                                            {
                                                <td>@Model.Number</td>
                                            }
                                            else
                                            {
                                                <td>No number</td>
                                            }
                                        </tr>
                                        <tr>
                                            <td class="text-primary">Address</td>
                                                @if(Model.Address != null)
                                                {
                                                    <td> @Model.Address </td>
                                                }
                                                else
                                                {
                                                    <td>No address</td>
                                                }
                                        </tr>
                                        <tr>
                                            <td class="text-primary">Status</td>
                                            <td>
                                                <span class="label label-success">@Model.Status</span>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
       
    </div>
    <!-- /.content -->
</aside>

@section Styles{
    <link type="text/css" href="~/Content/css/custom_css/panel.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/vendors/vertical-timeline/css/style.css">
    <link rel="stylesheet" href="~/Content/vendors/vertical-timeline/css/reset.css">
    <link type="text/css" href="~/Content/vendors/jasny-bootstrap/css/jasny-bootstrap.css" rel="stylesheet" />
    <link type="text/css" href="~/Content/vendors/x-editable/css/bootstrap-editable.css" rel="stylesheet" />
    <link type="text/css" href="~/Content/css/custom_css/single_user.css" rel="stylesheet" />
}

@section Scripts{
    <script src="~/Content/vendors/vertical-timeline/js/main.js"></script>
    <script src="~/Content/vendors/vertical-timeline/js/modernizr.js"></script>
    <script src="~/Content/vendors/jasny-bootstrap/js/jasny-bootstrap.js" type="text/javascript"></script>
    <script src="~/Content/vendors/x-editable/jquery.mockjax.js" type="text/javascript"></script>
    <script src="~/Content/vendors/x-editable/bootstrap-editable.js" type="text/javascript"></script>
    <script src="~/Scripts/custom_js/single_user.js" type="text/javascript"></script>
}